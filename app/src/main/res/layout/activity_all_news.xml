<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    tools:context="zhou.com.loveme.activity.AllNewsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f0f0f0">


        <ImageView
            android:id="@+id/iv_all_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/back" />

        <TextView
            style="@style/StyleHead"
            android:text="个人信息"
            android:layout_centerInParent="true"
             />

        <TextView
            android:id="@+id/tv_all_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="编辑"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            style="@style/StyleLine"
            android:layout_marginTop="45dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/list_pager"
                    android:layout_width="match_parent"
                    android:layout_height="260dp">
                </android.support.v4.view.ViewPager>
                <zhou.com.loveme.view.Xcircleindicator
                    android:id="@+id/Xcircleindicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-16dp"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    indicator:circleInterval="10dp"
                    indicator:fillColor="#adef2b2b"
                    indicator:radius="5dp"
                    indicator:strokeColor="#cecece"
                    />
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#ea8d8d"
                    android:text="真实姓名"
                    android:textSize="20sp" />

                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_province"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="省份  "
                        />
                    <TextView
                        android:id="@+id/tv_city"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  城市"
                        />
                </LinearLayout>
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/tv_constellation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星座"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />

                <TextView
                    style="@style/StyleText"
                    android:text= "学院类型"/>

                <TextView
                    android:id="@+id/tv_major"
                    style="@style/StyleText2"
                    />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />

                <TextView
                    style="@style/StyleText"
                    android:text= "我的个性标签类型"/>

                <TextView
                    android:id="@+id/tv_labels"
                    style="@style/StyleText2"
                    />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />

                <TextView
                    style="@style/StyleText"
                    android:text="我喜欢的运动类型" />

                <TextView
                    android:id="@+id/tv_sports"
                    style="@style/StyleText2"
                     />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />

                <TextView
                    style="@style/StyleText"
                    android:text="我喜欢的音乐类型" />

                <TextView
                    android:id="@+id/tv_musics"
                    style="@style/StyleText2"
                    />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />

                <TextView
                    style="@style/StyleText"
                    android:text="我喜欢的食物类型" />

                <TextView
                    android:id="@+id/tv_foods"
                    style="@style/StyleText2"
                    />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />

                <TextView
                    style="@style/StyleText"
                    android:text="我喜欢的电影类型" />

                <TextView
                    android:id="@+id/tv_films"
                    style="@style/StyleText2"
                    />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />

                <TextView
                    style="@style/StyleText"
                    android:text="我喜欢的书和动漫类型" />

                <TextView
                    android:id="@+id/tv_books"
                    style="@style/StyleText2"
                    />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />

                <TextView
                    style="@style/StyleText"
                    android:text="我的旅行足迹" />

                <TextView
                    android:id="@+id/tv_travels"
                    style="@style/StyleText2"
                    />
                <TextView
                    style="@style/StyleLine"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
